<h1>All Users</h1>
<!-- lbenote: also notice method is :delete, but in action controler its method is destroy -->
<!-- also show user_path(user) vs user_path(user.id) -->
<table>
<tr>
  <th>First Name</th>
  <th>Last Name</th>
  <th></th>
  <th></th>
  <th></th>
</tr>
<% @users.each do |user| %>
  <tr>
    <td><%= user.first_name %></td>
    <td><%= user.last_name %></td>
    <td><%= link_to 'Show', user_path(user) %></td>
    <td><%= link_to "Edit", edit_user_path(user) %></td>
    <td><%= link_to "Delete", user_path(user), method: :delete %></td>
  </tr>
<% end %>
</table>
<%= link_to "Add new User", new_user_path %>

